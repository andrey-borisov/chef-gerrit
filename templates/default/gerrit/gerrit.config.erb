[gerrit]
	basePath = git
	canonicalWebUrl = http://gerrit:<%= node['gerrit']['port'] %>/
[database]
	type = h2
	database = db/ReviewDB
[auth]
	type = OPENID
[sendemail]
	smtpServer = localhost
[container]
	user = <%= node['gerrit']['user']%>
	javaHome = <%= node['java']['jdk']['home'] %>
[sshd]
	listenAddress = *:29418
[httpd]
	listenUrl = http://*:<%= node['gerrit']['port'] %>/
[cache]
	directory = cache
